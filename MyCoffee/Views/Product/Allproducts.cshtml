@model IEnumerable<MyCoffee.Models.ProductVM>
@{
    ViewData["Title"] = "Allproducts";
}

<!--new product-->
      <section>
        <h1 class="text-center">All products</h1>
        <div class="container-fluid">
          <div class="row p-5" style="padding-left: 17% !important;">
              @foreach (var item in Model)
              {
                  
             
            <div>
              <div class="card m-2" style="width: 18rem;">
                <img src="~/img/pro1.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title">@item.Name</h5>
                  <p class="card-text">@item.Description</p>
                  <p class="card-text">@item.Price</p>
                  <a asp-action="Details" asp-controller="Cart" asp-route-id="@item.Id" class="btn btn-warning">Show Details</a>
                </div>
              </div>
            </div>
             }