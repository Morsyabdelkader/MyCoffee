@model MyCoffee.Models.ProductVM
@{
    ViewData["Title"] = "Edite";
    Layout = "~/Areas/Admin/Views/Layout.cshtml";
}

<script>
    $( function() {
      $( "#datepicker" ).datepicker();
    } );
</script>
<section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
              <br />
<h2>Edite Product</h2>

<form enctype="multipart/form-data" asp-controller="Product" asp-action="Edite" method="post">

    <div class="mb-3">
        <label asp-for=Name class="form-label">Product Name</label>
        <input type="text" class="form-control" id="Name" asp-for=Name \>
        <span class="text-danger" asp-validation-for="Name"> </span>
        <br />
        <label asp-for=Price class="form-label">Product Price</label>
        <input type="text" class="form-control" id="Price" asp-for=Price \>
        <span class="text-danger" asp-validation-for="Price"> </span>
     
       
        <br />
        <br />
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsActive" id="IsActive"  >
            <label class="form-check-label" asp-for=IsActive>
                Product IsActive
            </label>
            <span class="text-danger" asp-validation-for="IsActive"> </span>

        </div>
        <br />
        <label asp-for=Description class="form-label">Product Description</label>
        <textarea class="form-control" id="Description" asp-for=Description> insert your Description</textarea>
        <span class="text-danger" asp-validation-for="Description"> </span>

        <br />
        <label asp-for=CategoryId class="form-label"> Category</label>

        <select asp-items="(SelectList)ViewBag.CategoryList" class="form-control" id="CategoryId" asp-for=CategoryId>

            <option>choose CategoryName</option>


        </select>
        <span class="text-danger" asp-validation-for="CategoryId"> </span>
        <br />
       

        <label asp-for=PhotoUrl class="form-label">Product Photo</label>
        <input type="file" class="form-control" id="PhotoUrl" asp-for=PhotoUrl \>
        <span class="text-danger" asp-validation-for="PhotoUrl"> </span>
        <br />
     <img src="~/Photo/@Model.Photo">
    </div>

    
    <center>
        <button type="submit" class="btn btn-primary" >Edite</button>
        <br />
        <br />
    </center>
    
</form>
</div>
</div>
</div>
</section>

<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

