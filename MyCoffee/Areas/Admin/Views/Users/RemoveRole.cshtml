
@model MyCoffee.BL.Models.RoleUserVM
@{
    ViewData["Title"] = "RemoveRole";
    Layout = "~/Areas/Admin/Views/Layout.cshtml";
}
<section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
              <br />
<h2 class="text-info">Remove Role</h2>
<form asp-action="RemoveRole" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="All" class="text-danger">

        </div>
       
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserId"></label>
            </div>
            <div class="col-5">
      <select asp-items="(SelectList)ViewBag.UserList" class="form-control" id="UserId" asp-for=UserId></select>
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-5">
      <select asp-items="(SelectList)ViewBag.RoleList" class="form-control" id="RoleId" asp-for=RoleId></select>
                @*<input asp-for="SpecialTagId" class="form-control" />*@
            </div>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="RemoveRole" />
           
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

</div>
</div>
</div>
</section>
<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


