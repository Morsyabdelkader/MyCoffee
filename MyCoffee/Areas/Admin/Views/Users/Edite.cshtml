@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewData["Title"] = "Edite";
    Layout = "~/Areas/Admin/Views/Layout.cshtml";
}
<section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
              <br />
<h2>Edite Product</h2>

<form  asp-controller="Users" asp-action="Edite" method="post">

    <div class="mb-3">
        <label asp-for=Name class="form-label">Role Name</label>
        <input type="text" class="form-control" id="Name" asp-for=Name \>
        <span class="text-danger" asp-validation-for="Name">
                            @if (@ViewBag.mgs != null)
                            {
                                @ViewBag.mgs
                            }
                          
                                </span>
        <br />
       

    
    <center>
        <button type="submit" class="btn btn-primary" >Edite</button>
        <br />
        <br />
    </center>
    
</form>
</div>
</div>
</div>


</section>

<script src="~/plugins/jquery/jquery.min.js"></script>
<script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>




