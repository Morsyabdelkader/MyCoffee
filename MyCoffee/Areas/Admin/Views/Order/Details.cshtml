@model MyCoffee.BL.Models.OrderDetailsVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Layout.cshtml";
}

<main id="content" role="main" class="main pointer-event">
    <!-- Content -->
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header d-print-none">
            <div class="row align-items-center">
                <div class="col-sm mb-2 mb-sm-0">
                    

                    <div class="d-sm-flex align-items-sm-center">
                        <h1 class="page-header-title">Order #@Model.OrderId</h1>

                                                   
                                                <span class="ml-2 ml-sm-3">
                        <i class="tio-date-range"></i> @Model.OrderDate
                </span>

                    </div>

                    <div class="mt-2">
                       

                       
                        


                        
                       
                        <!-- End Unfold -->
                    </div>
                                            <div class="mt-2">
                            <div class="hs-unfold">
                                <span>Delivery Date:</span>
                            </div>
                            <div class="hs-unfold ml-4">

                                <h2>@Model.ShippingDate.Date</h2>

                            </div>
                            
                        </div>
                                    </div>

                <div class="col-sm-auto">
                    <a class="btn btn-icon btn-sm btn-ghost-secondary rounded-circle mr-1"
                       href="https://goonkora.com/admin/orders/details/100007"
                       data-toggle="tooltip" data-placement="top" title="Previous order">
                        <i class="tio-arrow-backward"></i>
                    </a>
                    <a class="btn btn-icon btn-sm btn-ghost-secondary rounded-circle"
                       href="https://goonkora.com/admin/orders/details/100009" data-toggle="tooltip"
                       data-placement="top" title="Next order">
                        <i class="tio-arrow-forward"></i>
                    </a>
                </div>
            </div>
        </div>
        <!-- End Page Header -->

        <div class="row" id="printableArea">
            <div class="col-lg-8 mb-3 mb-lg-0">
                <!-- Card -->
                <div class="card mb-3 mb-lg-5">
                    <!-- Header -->
                    <div class="card-header" style="display: block!important;">
                        <div class="row">
                            <div class="col-12 pb-2 border-bottom">
                                <h4 class="card-header-title">
                                    Order Details
                                    <span
                                        class="badge bg-secondary rounded-circle ml-1">@Model.OrderDetails.Count()</span>
                                </h4>
                            </div>
                            <div class="col-6 pt-2">
                                <h6 style="color: #8a8a8a;">
                                    Order Note
                                    : 
                                </h6>
                            </div>
                            <div class="col-6 pt-2">
                                <div class="text-right">
                                    <h6 class="text-capitalize" style="color: #8a8a8a;">
                                        Payment Method
                                        : cash on delivery
                                    </h6>
                                    <h6 class="" style="color: #8a8a8a;">
                                                                                    Reference Code
                                            :
                                            <button class="btn btn-outline-primary btn-sm" data-toggle="modal"
                                                    data-target=".bd-example-modal-sm">
                                                Add
                                            </button>
                                                                            </h6>
                                    <h6 class="text-capitalize"
                                        style="color: #8a8a8a;">Order Type
                                        : <label style="font-size: 10px"
                                                 class="badge badge-soft-primary">delivery</label>
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Header -->

                    <!-- Body -->
                    <div class="card-body">
                                                                                                                                    <!-- Media -->
                                
                                    @foreach (var item in @Model.Product)
                                    {
                                        <div class="media">
                                   
                                    <div class="avatar avatar-xl mr-3">
                                        @if(item.Photo=="null"){<img class="img-fluid" width=75 height=75
                                             src="~/Photo/noimage.PNG"
                                             
                                             alt="Image Description">
                                    }else{
                                         <img class="img-fluid" width=75 height=75
                                             src="~/Photo/@item.Photo"
                                             
                                             alt="Image Description">
                                    }

                                       
                                    </div>

                                    <div class="media-body" style="margin-top:10px">
                                        <div class="row">
                                            <div class="col-md-3 mb-3 mb-md-0">
                                                <strong> @item.Name</strong><br>
                                                                                                   
                                                    
                                                                                                           
                                                                                                    
                                            </div>

                                            <div class="col col-md-2 align-self-center">

                                                <h6>@item.Price جنيه‏</h6>
                                            </div>
                
                                            <div class="col col-md-2 align-self-center">
                                                <h5>@Model.ProductQuantities[item.Id] </h5>
                                            </div>
        
                                           

                                            @*<div class="col col-md-2 align-self-center">
                                                <h5>1 قطعه</h5>
                                            </div>*@


                                            <div class="col col-md-3 align-self-center text-right">
                                                                                                <h5> @(Model.ProductQuantities[item.Id] * item.Price)جنيه</h5>
                                            </div>
                                        </div>
                                    </div></div>
                                     }
                                
                                                                                    <!-- End Media -->
                                <hr>
                                                    
                        <div class="row justify-content-md-end mb-3">
                            <div class="col-md-9 col-lg-8">
                                <dl class="row text-sm-right">
                                    <dt class="col-sm-6">Items Price
                                        :
                                    </dt>
                                    <dd class="col-sm-6">@(Model.TotalPrice)جنيه‏</dd>
                                    <dt class="col-sm-6">Tax
                                        / Vat:
                                    </dt>
                                    <dd class="col-sm-6">0.00جنيه‏</dd>

                                    <dt class="col-sm-6">Subtotal:</dt>
                                    <dd class="col-sm-6">
                                        @(Model.TotalPrice)جنيه‏</dd>
                                    <dt class="col-sm-6">Coupon Discount
                                        :
                                    </dt>
                                    <dd class="col-sm-6">
                                        - 0.00جنيه‏</dd>
                                                                        <dt class="col-sm-6">Delivery Fee
                                        :
                                    </dt>
                                    <dd class="col-sm-6">
                                                                                                                                                                    0.00جنيه‏
                                        <hr>
                                    </dd>

                                    <dt class="col-sm-6">Total:</dt>
                                    <dd class="col-sm-6">@(Model.TotalPrice)جنيه‏</dd>
                                </dl>
                                <!-- End Row -->
                            </div>
                        </div>
                        <!-- End Row -->
                    </div>
                    <!-- End Body -->
                </div>
                <!-- End Card -->
            </div>

                        <div class="col-lg-4">
                <!-- Card -->
                <div class="card">
