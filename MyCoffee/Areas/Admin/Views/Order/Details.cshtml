                                    @Model.identity.UserName<br>
                                    @Model.PhoneNumber<br>
                                    Home<br>
                                    <a target="_blank"
                                       href="#">
                                       <i class="tio-map"></i> @Model.identity.Address , @Model.identity.City , @Model.identity.State<br>
                                    </a>
                                </span>
                                                                                    </div>
                <!-- End Body -->
                </div>
                <!-- End Card -->
            </div>
                    </div>
        <!-- End Row -->
    </div>

